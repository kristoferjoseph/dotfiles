#Finder
alias o='open . &'
alias chrome='open -a Chrome'

#Processes
alias tu='top -o cpu' #cpu
alias tm='top -o vsize' #memory

#Anger
alias bitch='sudo'

#Utility
alias reload='source ~/bin/dotfiles/bash/aliases'
alias ea='mate -w ~/bash/dotfiles/bash/aliases && reload'
alias ee='mate ~/bash/dotfiles/bash/env'

#Git
alias g='git status'
alias gl='git pull'
alias gp='git push'
alias gd='git diff | mate'
alias gcv='git commit -v'
alias gcva='git commit -v -a'
alias gb='git branch'
alias gba='git branch -a'
alias ga='git add -A'
# Commit pending changes and quote all args as message
function gc() {
    git commit -v -a -m "$*"
}
alias gco='git checkout'

#Common
function cdl() {
 'cd $1; ls'   
}
alias cdd='cd -' #Go to last directory cd'd from
alias la="ls -la"
alias c='clear'

#Shortcuts
alias work='cd ~/Documents/workspace'
alias bundles='cd ~/Library/Application\ Support/TextMate/Bundles/'
alias sd='cd ~/Documents/Developer/ProjectSprouts'